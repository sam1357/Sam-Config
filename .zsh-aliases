######################### GENERAL ALIASES #############################
alias py="python3"
alias v="nvim"
alias vim="nvim"

alias c="z"
alias cd="z"
alias d="docker"
alias dc="docker compose"
alias dcu="docker compose up -d"
alias dcub="docker compose up --build -d"
alias dcd="docker compose down"
alias k="kubectl"
alias kc="kubectx"
alias kn="kubens"
alias cl="clear"
############################# LS ALIASES #############################
alias ld="eza -lD --icons"
alias lf="eza -lf --color=always --icons | grep -v /"
alias lh="eza -dl .* --group-directories-first --icons"
alias ll="eza -al --group-directories-first --icons"
alias ls="eza --color=always --sort=size --icons"
alias l="eza -l --color=always --sort=size --icons"
alias lt="eza -al --sort=modified --icons"
######################## GIT ALIASES #################################
alias goops="git commit --amend --no-edit"
